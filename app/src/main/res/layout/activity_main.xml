<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.hp.quizappacad.MainActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/rl">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/timer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/result">

            <Button
                android:text="5"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="0"
                android:id="@+id/button0"
                android:textSize="70sp"
                android:background="@drawable/ic_android_black_24dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:onClick="chooseAnswer" />

            <Button
                android:text="5"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="2"
                android:id="@+id/button2"
                android:textSize="70sp"
                android:background="@drawable/ic_android_black_24dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:onClick="chooseAnswer" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="3"
                android:id="@+id/button3"
                android:textSize="70sp"
                android:background="@drawable/ic_android_black_24dp"
                android:backgroundTint="?android:attr/colorFocusedHighlight"
                android:onClick="chooseAnswer" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="1"
                android:id="@+id/button1"
                android:textSize="70sp"
                android:backgroundTint="@android:color/holo_purple"
                android:background="@drawable/ic_android_black_24dp"
                android:onClick="chooseAnswer" />
        </GridLayout>

        <TextView
            android:text="5 + 25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qtion"
            android:padding="10dp"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:textSize="40sp"
            android:layout_above="@+id/playAgain"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" />

        <TextView
            android:text="0/0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/points"
            android:textSize="30sp"
            android:padding="10dp"
            android:background="@drawable/ic_android_black_24dp"
            android:backgroundTint="@android:color/holo_green_light"/>

        <TextView
            android:text="30s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/timer"
            android:textSize="30sp"
            android:background="@drawable/ic_android_black_24dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="10dp" />

        <Button
            android:text="Play Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playAgain"
            android:onClick="playAgain"
            android:background="@drawable/ic_android_black_24dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/qtion"
            android:layout_alignEnd="@+id/qtion"
            android:layout_marginBottom="17dp" />
    </RelativeLayout>

    <Button
        android:text="Play!"
        android:fontFamily="serif-monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:textStyle="italic"
        android:textSize="60sp"
        android:padding="20dp"
        android:background="@drawable/ic_android_black_24dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:onClick="start"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:onClick="onClick"
        android:visibility="invisible"
        android:background="@drawable/ic_android_black_24dp"
        android:text="Button"
        tools:ignore="NotSibling"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp" />

</RelativeLayout>
